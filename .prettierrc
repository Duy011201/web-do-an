{
  "useTabs": false,
  "singleQuote": false,
  "tabWidth": 2,
  "printWidth": 80,
  "semi": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "es5",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    }
  ],
  "endOfLine": "auto"
}
